<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_alignParentBottom="true"
    android:background="#e7ebec"
    android:paddingRight="16dp">

    <RelativeLayout
        android:id="@+id/key_body_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/key_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="."
            android:textColor="#494949"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView

            android:id="@+id/key_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:layout_toRightOf="@+id/key_1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:text="www."
            android:textColor="#494949"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/key_4"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/copy_tab"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="wap."
            android:textColor="#494949"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/copy_tab"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="剪切板"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/key_3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/key_2"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="m."
            android:textColor="#494949"
            android:textSize="14sp" />
    </RelativeLayout>


    <SeekBar
        android:id="@+id/fg_srt_forum_item_seek"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="#e7ebec"
        android:clickable="true"
        android:max="41"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:paddingEnd="0dp"
        android:paddingStart="0dp"
        android:progress="21"
        android:progressDrawable="@drawable/ic_shape_seek_bar_track_img"
        android:splitTrack="false"
        android:thumb="@drawable/ic_shape_seek_bar_thumb_img"
        android:thumbOffset="0dp" />
</RelativeLayout>